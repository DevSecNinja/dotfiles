{
  "name": "dotfiles",
  // Base image - prebuilt versions are available at ghcr.io/devsecninja/dotfiles-devcontainer:latest
  // Codespaces prebuilds can be configured in repository settings for faster startup
  "image": "mcr.microsoft.com/devcontainers/base:debian-12",
  "features": {
    "ghcr.io/devcontainers/features/git-lfs:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/powershell:1": {
      "modules": "Pester==5.7.1"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "pspester.pester-test"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "terminal.integrated.defaultProfile.linux": "fish"
      }
    }
  },
  "postCreateCommand": "./home/install.sh",
  "remoteUser": "vscode"
}
