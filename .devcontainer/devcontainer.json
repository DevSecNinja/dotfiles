{
  "name": "dotfiles",
  "image": "mcr.microsoft.com/devcontainers/base:debian-12",

  "features": {
    "ghcr.io/devcontainers/features/git-lfs:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "terminal.integrated.defaultProfile.linux": "fish"
      }
    }
  },

  "remoteUser": "vscode"
}