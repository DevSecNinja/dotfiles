#!/bin/bash

display_system_info() {
  # Define some colors
  RED='\033[0;31m'
  GREEN='\033[0;32m'
  NC='\033[0m' # No Color

  # Define thresholds
  memory_threshold_value=2048    # Memory threshold value in MB
  disk_threshold=2048            # Disk space threshold in MB

  if [[ "$1" == "-h" ]] || [[ "$1" == "--help" ]]; then
    echo "Usage: display_system_info"
    echo "Output: returns the CPU and memory information of the system"
    return 0
  fi

  if [[ $# > 0 ]]; then
    echo "Error: Invalid number of arguments."
    echo "Use -h or --help flag for usage information."
    return 1
  fi

  if test ! "$(uname)" = "Darwin"; then
    # Display CPU usage information
    top -b -n1 | grep "Cpu(s)" | awk '{print "‚öôÔ∏è CPU Usage: " $2+$4+$6 "%"}'

    # Display memory information
    free --mega | awk -v red="${RED}" -v green="${GREEN}" -v nc="${NC}" -v mem_unit="${memory_threshold_unit}" -v mem_value="${memory_threshold_value}" '/^Mem:/ {color = ($7 < mem_value ? red : green); printf "üß† Memory Total: %.2fGi, Used: %.2fGi, Available: " color "%.2fGi" nc "\n", $2/1024, $3/1024, $7/1024}'

    # Display free space on /
    df -BM / | awk -v red="${RED}" -v green="${GREEN}" -v nc="${NC}" -v disk_thres="${disk_threshold}" 'NR==2 {available = $4; gsub(/[a-zA-Z]*/, "", available); color = (available < disk_thres ? red : green); printf "üìÅ Free Space on /: Total: %.2fGi, Used: %.2fGi, Available: " color "%.2fGi" nc "\n", $2/1024, $3/1024, available/1024}'

    # Display uptime
    echo -n "‚è±Ô∏è Uptime: "
    uptime -p
  fi
}
