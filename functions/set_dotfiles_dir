set_dotfiles_dir {
  VS_CODE_DIR="/workspaces/.codespaces/.persistedshare/dotfiles"
  LOCAL_DIR="$(dirname $(dirname "$(readlink -f "$0")"))" 2> /dev/null
  DEFAULT_DIR=$(realpath $HOME/.dotfiles)

  if test -d $VS_CODE_DIR;
  then
    echo $VS_CODE_DIR
  elif [[ $LOCAL_DIR != "." ]]
  then
    echo $LOCAL_DIR
  else
    echo $DEFAULT_DIR
  fi
}