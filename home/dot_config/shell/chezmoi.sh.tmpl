# Set GitHub username from chezmoi config for use in scripts
export CHEZMOI_GITHUB_USERNAME="{{ .githubUsername }}"
{{- end }}

{{- if eq .chezmoi.os "windows" }}
# Windows Enterprise Environment Detection
export CHEZMOI_IS_ENTRA_ID_JOINED="{{ .isEntraIDJoined }}"
export CHEZMOI_IS_INTUNE_JOINED="{{ .isIntuneJoined }}"
{{- if .entraIDDomain }}
export CHEZMOI_ENTRA_ID_DOMAIN="{{ .entraIDDomain }}"
{{- end }}
export CHEZMOI_IS_WORK="{{ .isWork }}"
{{- end }}
