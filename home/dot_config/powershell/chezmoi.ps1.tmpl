# Chezmoi configuration variables
# This file is auto-generated from chezmoi template

{{- if .githubUsername }}
# Set GitHub username from chezmoi config for use in scripts
$env:CHEZMOI_GITHUB_USERNAME = "{{ .githubUsername }}"
{{- end }}

# Windows Enterprise Environment Detection (works on Windows and WSL)
$env:CHEZMOI_IS_ENTRA_ID_JOINED = "{{ .isEntraIDJoined }}"
$env:CHEZMOI_IS_INTUNE_JOINED = "{{ .isIntuneJoined }}"
$env:CHEZMOI_IS_ENTERPRISE_JOINED = "{{ .isEnterpriseJoined }}"
$env:CHEZMOI_IS_DOMAIN_JOINED = "{{ .isDomainJoined }}"
{{- if .tenantName }}
$env:CHEZMOI_TENANT_NAME = "{{ .tenantName }}"
{{- end }}
{{- if .tenantId }}
$env:CHEZMOI_TENANT_ID = "{{ .tenantId }}"
{{- end }}
$env:CHEZMOI_IS_WORK = "{{ .isWork }}"
