{{- /* Detect special environments first */ -}}
{{- $codespaces:= env "CODESPACES" | not | not -}}
{{- $ci:= env "CI" | not | not -}}

{{- /* Checks if running interactively */ -}}
{{- /* In Codespaces and CI, force non-interactive mode */ -}}
{{- $interactive := and stdinIsATTY (not $codespaces) (not $ci) -}}

{{- /* Initializes the firstname and lastname variables with default values */ -}}
{{- $firstname := "Jean-Paul" -}}
{{- $lastname := "van Ravensberg" -}}

{{- /* If firstname was previously set, reuses it */ -}}
{{- if hasKey . "firstname" -}}
{{-   $firstname = .firstname -}}
{{- /* Otherwise, if running interactively, prompts for firstname */ -}}
{{- else if $interactive -}}
{{-   $firstname = promptString "firstname" $firstname -}}
{{- end -}}

{{- /* If lastname was previously set, reuses it */ -}}
{{- if hasKey . "lastname" -}}
{{-   $lastname = .lastname -}}
{{- /* Otherwise, if running interactively, prompts for lastname */ -}}
{{- else if $interactive -}}
{{-   $lastname = promptString "lastname" $lastname -}}
{{- end -}}

{{- /* Combine firstname and lastname into full name */ -}}
{{- $name := printf "%s %s" $firstname $lastname -}}

{{- /* Username (for system login, etc.) */ -}}
{{- $username := "jean-paul" -}}
{{- if hasKey . "username" -}}
{{-   $username = .username -}}
{{- else if $interactive -}}
{{-   $username = promptString "username" $username -}}
{{- end -}}

{{- /* Does the same for the email */ -}}
{{- $email := "14926452+DevSecNinja@users.noreply.github.com" -}}
{{- if hasKey . "email" -}}
{{-   $email = .email -}}
{{- else if $interactive -}}
{{-   $email = promptString "email" $email -}}
{{- end -}}

{{- /* Extract GitHub username from email or prompt */ -}}
{{- $githubUsername := "" -}}
{{- /* Matches GitHub noreply email format: ID+USERNAME@users.noreply.github.com (e.g., 14926452+DevSecNinja@users.noreply.github.com) */ -}}
{{- $githubEmailPattern := "^[0-9]+\\+([^@]+)@users\\.noreply\\.github\\.com$" -}}
{{- if hasKey . "githubUsername" -}}
{{-   $githubUsername = .githubUsername -}}
{{- else -}}
{{-   $match := regexMatch $githubEmailPattern $email -}}
{{-   if $match -}}
{{-     $githubUsername = regexReplaceAll $githubEmailPattern $email "${1}" -}}
{{-   else -}}
{{-     $gitRemote := output "git" "config" "--get" "remote.origin.url" | trim -}}
{{-     if $gitRemote -}}
{{-       $repoUrlPattern := "github\\.com[:/]([^/]+)" -}}
{{-       if regexMatch $repoUrlPattern $gitRemote -}}
{{-         $githubUsername = regexReplaceAll $repoUrlPattern $gitRemote "${1}" -}}
{{-       end -}}
{{-     end -}}
{{-     if and $interactive (eq $githubUsername "") -}}
{{-       $githubUsername = promptString "GitHub username (optional)" "" -}}
{{-     end -}}
{{-   end -}}
{{- end -}}

{{- if $interactive -}}
{{-   writeToStdout "üí° Tip: you can re-enter your details with `chezmoi init --data=false`.\n" -}}
{{- end -}}
{{- $remoteContainers:= env "REMOTE_CONTAINERS" | not | not -}}
{{- $devcontainer:= or $remoteContainers (stat "/.dockerenv") | not | not -}}
{{- $wsl:= and (lookPath "wslinfo") (output "wslinfo" "--version" | trim | ne "") | not | not -}}

{{- /* Windows Entra ID and Intune detection */ -}}
{{- $isEntraIDJoined := false -}}
{{- $isIntuneJoined := false -}}
{{- $entraIDDomain := "" -}}
{{- $isWork := false -}}

{{- if eq .chezmoi.os "windows" -}}
{{-   if lookPath "dsregcmd.exe" -}}
{{-     $dsregOutput := output "cmd.exe" "/c" "dsregcmd.exe /status" | trim -}}
{{-     if $dsregOutput -}}
{{-       $isEntraIDJoined = regexMatch "(?i)AzureAdJoined\\s*:\\s*YES" $dsregOutput -}}
{{-       if regexMatch "(?i)TenantName\\s*:\\s*(.+)" $dsregOutput -}}
{{-         $entraIDDomain = regexReplaceAll "(?i).*TenantName\\s*:\\s*([^\\r\\n]+).*" $dsregOutput "${1}" | trim -}}
{{-       else if regexMatch "(?i)DomainName\\s*:\\s*(.+)" $dsregOutput -}}
{{-         $entraIDDomain = regexReplaceAll "(?i).*DomainName\\s*:\\s*([^\\r\\n]+).*" $dsregOutput "${1}" | trim -}}
{{-       end -}}
{{-       $isIntuneJoined = regexMatch "(?i)MdmUrl\\s*:\\s*https?://" $dsregOutput -}}
{{-       if $entraIDDomain -}}
{{-         $isWork = hasSuffix "microsoft.com" $entraIDDomain -}}
{{-       end -}}
{{-     end -}}
{{-   end -}}
{{- end -}}

{{- /* Determine installation type based on hostname */ -}}
{{- $installType := "full" -}}
{{- $hostname := .chezmoi.hostname -}}
{{- if $hostname | hasPrefix "SVL" -}}
{{-   if $hostname | hasPrefix "SVLDEV" -}}
{{-     $installType = "full" -}}
{{-     if $interactive -}}
{{-       writeToStdout "üñ•Ô∏è  Dev server detected - installing full dotfiles\n" -}}
{{-     end -}}
{{-   else -}}
{{-     $installType = "light" -}}
{{-     if $interactive -}}
{{-       writeToStdout "üîß Server detected - installing light dotfiles\n" -}}
{{-     end -}}
{{-   end -}}
{{- else if $codespaces -}}
{{-   $installType = "light" -}}
{{-   if $interactive -}}
{{-     writeToStdout "‚òÅÔ∏è  Codespaces detected - installing light dotfiles\n" -}}
{{-   end -}}
{{- else if $devcontainer -}}
{{-   $installType = "light" -}}
{{-   if $interactive -}}
{{-     writeToStdout "üê≥ Devcontainer detected - installing light dotfiles\n" -}}
{{-   end -}}
{{- else if $ci -}}
{{-   $installType = "light" -}}
{{-   if $interactive -}}
{{-     writeToStdout "üîß CI environment detected - installing light dotfiles\n" -}}
{{-   end -}}
{{- else -}}
{{-   if $interactive -}}
{{-     writeToStdout "üíª Workstation detected - installing full dotfiles\n" -}}
{{-   end -}}
{{- end -}}

sourceDir: {{ .chezmoi.sourceDir | quote }}

data:
  firstname: {{ $firstname | quote }}
  lastname: {{ $lastname | quote }}
  name: {{ $name | quote }}
  username: {{ $username | quote }}
  codespaces: {{ $codespaces }}
  devcontainer: {{ $devcontainer }}
  wsl: {{ $wsl }}
  ci: {{ $ci }}
  email: {{ $email | quote }}
  githubUsername: {{ $githubUsername | quote }}
  installType: {{ $installType | quote }}
  isEntraIDJoined: {{ $isEntraIDJoined }}
  isIntuneJoined: {{ $isIntuneJoined }}
  entraIDDomain: {{ $entraIDDomain | quote }}
  isWork: {{ $isWork }}
