#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

set -e

parentDirectory="$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd -P)"
dotfilesDirectory="$(cd "$( dirname "$parentDirectory" )" && pwd -P)"

displayUsageAndExit() {
	echo "dot -- dotfiles management"
	echo ""
	echo "Usage: dot [options]"
	echo ""
	echo "Options:"
	echo "  -e, --edit    Open dotfiles directory for editing"
	echo "  -h, --help    Show this help message and exit"
	exit
}

while test $# -gt 0; do
	case "$1" in
		"-h"|"--help")
			displayUsageAndExit
			;;
		"-e"|"--edit")
			exec "$EDITOR" "$dotfilesDirectory"
			exit
			;;
		*)
			echo "Invalid option: $1"
			displayUsageAndExit
			;;
	esac
	shift
done

export DOTFILES="$(dirname $(dirname "$(readlink -f "$0")"))" 2> /dev/null

# TODO: Fix ZSH variable path for SSH
# ZSH var works fine in local but not over SSH
if [[ $DOTFILES == "." ]]
then
  export DOTFILES="$(realpath $HOME/.dotfiles)"
fi

if [ "$(uname -s)" == "Darwin" ]
then
  info "setting up macOS"

  # Set macOS defaults
  $DOTFILES/macos/set-defaults.sh

  # Set macOS hostname
  $DOTFILES/macos/set-hostname.sh
fi

# Install homebrew
if test ! $(which brew)
then
	$DOTFILES/homebrew/install.sh 2>&1
	source $DOTFILES/homebrew/path.zsh
fi

# Install Oh My ZSH
$DOTFILES/zsh/install.sh 2>&1

# Upgrade homebrew
if test $(which brew)
then
  echo "› brew update"
  brew update

  # Install software
  echo "› script/install"
  $DOTFILES/script/install
fi
