#!/bin/bash
# This script installs common development tools
# Customize based on your needs

set -e

echo "üîß Installing common development tools..."

{{- if eq .chezmoi.os "linux" }}
    {{- if eq .chezmoi.osRelease.id "ubuntu" "debian" }}
# Ubuntu/Debian packages
PACKAGES="git vim tmux curl wget tree htop python3-venv fish"

if command -v apt-get >/dev/null 2>&1; then
    for pkg in $PACKAGES; do
        if ! dpkg -l | grep -q "^ii  $pkg "; then
            echo "Installing $pkg..."
            sudo apt-get install -y "$pkg"
        else
            echo "‚úÖ $pkg already installed"
        fi
    done
fi
    {{- end }}
{{- else if eq .chezmoi.os "darwin" }}
# macOS with Homebrew
if command -v brew >/dev/null 2>&1; then
    brew install git vim tmux tree htop fish
else
    echo "‚ùå Homebrew not found. Please install Homebrew first."
    exit 1
fi
{{- end }}

echo "‚úÖ Development tools installation complete!"
