{{- /* Checks if running interactively, which is not the case for GitHub Codespaces */ -}}
{{- $interactive := stdinIsATTY -}}

{{- /* Initializes the name variable with a default value */ -}}
{{- $name := "Jean-Paul van Ravensberg" -}}
{{- /* If name was previously set, reuses it */ -}}
{{- if hasKey . "name" -}}
{{-   $name = .name -}}
{{- /* Otherwise, if running interactively, prompts for a name */ -}}
{{- else if $interactive -}}
{{-   $name = promptString "name" $name -}}
{{- end -}}

{{- /* Does the same for the email */ -}}
{{- $email := "14926452+DevSecNinja@users.noreply.github.com" -}}
{{- if hasKey . "email" -}}
{{-   $email = .email -}}
{{- else if $interactive -}}
{{-   $email = promptString "email" $email -}}
{{- end -}}

{{- if $interactive -}}
{{-   writeToStdout "üí° Tip: you can re-enter your name and email with `chezmoi init --data=false`.\n" -}}
{{- end -}}

{{- /* Determine installation type based on hostname */ -}}
{{- $installType := "full" -}}
{{- $hostname := .chezmoi.hostname -}}
{{- if $hostname | hasPrefix "SVL" -}}
{{-   if $hostname | hasPrefix "SVLDEV" -}}
{{-     $installType = "full" -}}
{{-     if $interactive -}}
{{-       writeToStdout "üñ•Ô∏è  Dev server detected - installing full dotfiles\n" -}}
{{-     end -}}
{{-   else -}}
{{-     $installType = "light" -}}
{{-     if $interactive -}}
{{-       writeToStdout "üîß Server detected - installing light dotfiles\n" -}}
{{-     end -}}
{{-   end -}}
{{- else if $hostname | hasPrefix "runnervm" -}}
{{-   $installType = "light" -}}
{{-   if $interactive -}}
{{-     writeToStdout "üîß Runner VM detected - installing light dotfiles\n" -}}
{{-   end -}}
{{- else -}}
{{-   if $interactive -}}
{{-     writeToStdout "üíª Workstation detected - installing full dotfiles\n" -}}
{{-   end -}}
{{- end -}}

{{- $codespaces:= env "CODESPACES" | not | not -}}
sourceDir: {{ .chezmoi.sourceDir | quote }}

data:
  name: {{ $name | quote }}
  codespaces = {{ $codespaces }}
  email: {{ $email | quote }}
  installType: {{ $installType | quote }}
